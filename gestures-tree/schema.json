{
  "$schema": "http://json-schema.org/draft-06/schema#",
	"@context": "https://schema.org/docs/tree.jsonld",

  "title": "Gestures tree",
  "type": "object",

  "properties": {
  	"gesture": {
  		"title": "List of gestures",
	  	"type": "array",
	  	"items": {
        "type": "object",
        "properties": {
          "id__temporary": { "type": "string" },
          "gesture": {
            "type": "string",
            "minLength": 3
          },
          "additionalProperties"
          "user": {
        		"title": "Referenced list of usernames (normalized)",
            "description": "https://stackoverflow.com/questions/35545812/how-do-i-do-a-nested-list-array-of-schema-references-in-json-schema",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id__temporary": { "type": "string" }
              },
              "additionalProperties": {
                "$ref": "#/users"
              }
            },
            "minItems": 0,
            "uniqueItems": true
          },
          "event": {
            "title": "Referenced list of events (normalized)",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id__temporary": { "type": "string" }
              },
              "additionalProperties" : {
                "$ref" : "#/events"
              }
            },
            "minItems": 0,
            "uniqueItems": true
          },
          "place": {
            "title": "Referenced list of places (normalized)",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id__temporary": { "type": "string" }
              },
              "additionalProperties" : {
                "$ref" : "#/events"
              }
            },
            "minItems": 0,
            "uniqueItems": true
          }
        }
		  }
	  },
  	"user": {
  		"title": "Usernames or pseudonyms",
  		"description": "!!! revisit: JSON-LD schema.org types",
  		"type": "object",
  		"properties": {
  			"id__temporary": { "type": "string" },
  			"username": { "type": "string" },
  		}
  	},
  	"event": {
  		"title": "Events (normalized)",
  		"description": "!!! revisit: JSON-LD schema.org types",
  		"type": "object",
  		"properties": {
	  		"title": { "type": "string" },
	  		"date": { "type": "integer" },
	  		"timeframes": {
	  			"type": "array",
	  			"items": {
	  				"title": "",
	  				"type": "object",
	  				"properties": {
	  					"$ref": "https://example.com/schema.json#something"
	  				}
	  			}
	  		}
  		}
  	},
    "place": {
      "title": "Places",
      "description": "!!! revisit: JSON-LD schema.org types",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "date": { "type": "integer" },
        "timeframes": {
          "type": "array",
          "items": {
            "title": "",
            "description": "!!! revisit referencing there",
            "type": "object",
            "properties": {
              "$ref": "https://example.com/schema.json#something"
            }
          }
        }
      }
    },
  	"required": ["gestures"]
 	}
}